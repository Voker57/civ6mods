<GameData>
	
<!-- GAME MECHANICS -->
	<GlobalParameters>
	<!-- EMBARK AND DISEMBARK COST -->
		<Update>
			<Where	Name="MOVEMENT_EMBARK_COST"/>
			<Set	Value="3"/>
		</Update>
	<!-- EMBARKED MOVEMENT -->
		<Update>
			<Where	Name="MOVEMENT_WHILE_EMBARKED_BASE"/>
			<Set	Value="3"/>
		</Update>
	<!-- UPGRADE COST -->
<!--<Update>
			<Where	Name="UPGRADE_NET_PRODUCTION_PERCENT_COST"/>
			<Set	Value="75"/>
		</Update>-->
	<!-- TRADING POST YIELD -->
		<Update>
			<Where	Name="TRADING_POST_GOLD_IN_OWN_CITY"/>
			<Set	Value="1"/>
		</Update>
		<Update>
			<Where	Name="TRADING_POST_GOLD_IN_FOREIGN_CITY"/>
			<Set	Value="2"/>
		</Update>
	<!-- RELIGION -->
		<Update>
			<Where	Name="RELIGION_SPREAD_ADJACENT_CITY_DISTANCE"/>
			<Set	Value="6"/>
		</Update>
		<Update>
			<Where	Name="RELIGION_SPREAD_ADJACENT_PER_TURN_PRESSURE"/>
			<Set	Value="2"/>
		</Update>
		<Update>
			<Where	Name="RELIGION_SPREAD_ATHEISM_PRESSURE_PER_POP"/>
			<Set	Value="20"/>
		</Update>
		<Update>
			<Where	Name="RELIGION_SPREAD_HOLY_CITY_PRESSURE_MULTIPLIER"/>
			<Set	Value="6"/>
		</Update>
		<Update>
			<Where	Name="RELIGION_SPREAD_STRENGTH_MULTIPLIER"/>
			<Set	Value="600"/>
		</Update>
		<Update>
			<Where	Name="RELIGION_SPREAD_TRADE_ROUTE_PRESSURE_FOR_DESTINATION"/>
			<Set	Value="6"/>
		</Update>
	<!--<Update>
			<Where	Name="RELIGION_SPREAD_TRADE_ROUTE_PRESSURE_FOR_ORIGIN"/>
			<Set	Value="3"/>
		</Update>-->
	<!-- CITY DEFENSE -->
		<Update>
			<Where	Name="COMBAT_POPULATION_PER_STRENGTH"/>
			<Set	Value="1"/>
		</Update>
	<!-- ICE TILES -->
		<Update>
			<Where	Name="ICE_TILES_PERCENT"/>
			<Set	Value="10"/>
		</Update>
	<!-- MOVEMENT PILLAGE COST -->
		<Update>
			<Where	Name="PILLAGE_MOVEMENT_COST"/>
			<Set	Value="4"/>
		</Update>
	<!-- MOVEMENT RIVER COST -->
		<Update>
			<Where	Name="MOVEMENT_RIVER_COST"/>
			<Set	Value="3"/>
		</Update>
	</GlobalParameters>

<!-- CASUS BELLI -->	
	<DiplomaticActions>
		<!-- HOLY WARS -->
		<Update>
			<Where	DiplomaticActionType="DIPLOACTION_DECLARE_HOLY_WAR"/>
			<Set	InitiatorPrereqCivic="CIVIC_THEOLOGY"/>
		</Update>
		<!-- PROTECTORATE WARS -->
		<Update>
			<Where	DiplomaticActionType="DIPLOACTION_DECLARE_PROTECTORATE_WAR"/>
			<Set	InitiatorPrereqCivic="CIVIC_RECORDED_HISTORY"/>
		</Update>
	</DiplomaticActions>
	
<!-- ESPIONAGE -->
	<UnitOperations>
		<Update>
			<Where	OperationType="UNITOPERATION_SPY_SIPHON_FUNDS"/>
			<Set	BaseProbability="15"/>
		</Update>
	<!--<Update>
			<Where	OperationType="UNITOPERATION_SPY_RECRUIT_PARTISANS"/>
			<Set	BaseProbability="16"/>
		</Update>-->
		<Update>
			<Where	OperationType="UNITOPERATION_SPY_BREACH_DAM"/>
			<Set	BaseProbability="17"/>
		</Update>
	</UnitOperations>

</GameData>
